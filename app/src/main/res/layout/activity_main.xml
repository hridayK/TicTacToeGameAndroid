<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F0F2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textColor="#DA0037"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn:"
        android:textColor="#053742"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="player1"
        android:textColor="#053742"
        android:textSize="72sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        tools:layout_editor_absoluteX="0dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:rowCount="3"
        android:columnCount="3"
        android:background="#A2DBFA">

        <Button
            android:id="@+id/b00"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click00"
            />
        <Button
            android:id="@+id/b01"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click01"
            />
        <Button
            android:id="@+id/b02"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click02"
            />
        <Button
            android:id="@+id/b10"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click10"
            />
        <Button
            android:id="@+id/b11"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click11"
            />
        <Button
            android:id="@+id/b12"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click12"
            />
        <Button
            android:id="@+id/b20"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click20"
            />
        <Button
            android:id="@+id/b21"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click21"
            />
        <Button
            android:id="@+id/b22"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="12sp"
            android:backgroundTint="#053742"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:textAlignment="center"
            android:textSize="54sp"
            android:onClick="click22"
            />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
